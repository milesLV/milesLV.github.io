  group_by(Variable, Value) %>%
  summarise(n = n(), .groups = "drop") %>%
  mutate(Total = nrow(recoded_tedsd_2021 %>% filter(LIVARAG == "Unhoused")),
         Percentage = n / Total * 100) %>%
  arrange(desc(Percentage)) %>%
